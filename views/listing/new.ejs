<% layout("layout/boilerplate.ejs") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Create new list....</h2>
    </div>

    <div class="col-8 offset-2 mt-1">
      <form
        method="post"
        action="/listings"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data" 
      >
        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            placeholder="enter title"
            name="listing[title]"
            id="title"
            required
            class="form-control"
          />

          <div class="valid-feedback">Looks good!</div>
          <!-- feedback during summition of form-->
          <div class="invalid-feedback">Please enter title.</div>
        </div>

        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="enter something about your place"
            id="description"
            required
            class="form-control"
          ></textarea>

          <div class="valid-feedback">Looks good!</div>
          <!-- feedback during summition of form-->
          <div class="invalid-feedback">Please enter description.</div>
        </div>


        <div class="mb-2">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
            required
          />

          <div class="valid-feedback">Looks good!</div>
          <!-- feedback during summition of form-->
          <div class="invalid-feedback">Please enter img link.</div>
        </div>


        <div class="row">
          <div class="mb-2 col-6">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="enter price..."
              id="price"
              required
              class="form-control"
            />

            <div class="valid-feedback">Looks good!</div>
            <!-- feedback during summition of form-->
            <div class="invalid-feedback">Please enter price.</div>
          </div>

          <div class="mb-2 col-6">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="enter your country"
              id="country"
              required
              class="form-control"
            />

            <div class="valid-feedback">Looks good!</div>
            <!-- feedback during summition of form-->
            <div class="invalid-feedback">Please enter country.</div>
          </div>
        </div>

        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter your adress"
            id="location"
            required
            class="form-control"
          />

          <div class="valid-feedback">Looks good!</div>
          <!-- feedback during summition of form-->
          <div class="invalid-feedback">location must there.</div>
        </div>

        <button class="btn btn-success mt-3 mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
